---
const { url, text } = Astro.props;

const shareLinks = {
    facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`,
    x: `https://twitter.com/intent/tweet?url=${encodeURIComponent(url)}&text=${encodeURIComponent(text)}`,
    linkedin: `https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(url)}&title=${encodeURIComponent(text)}`,
    whatsapp: `https://api.whatsapp.com/send?text=${encodeURIComponent(text + ' ' + url)}`,
    telegram: `https://t.me/share/url?url=${encodeURIComponent(url)}&text=${encodeURIComponent(text)}`
};
---
<div class="mt-5 text-center">
    <h4 class="h5 fw-bold mb-3">Bagikan:</h4>
    <a href={shareLinks.facebook} target="_blank" class="btn btn-outline-secondary me-2" aria-label="Share on Facebook">
        <i class="bi bi-facebook"></i>
    </a>
    <a href={shareLinks.x} target="_blank" class="btn btn-outline-secondary me-2" aria-label="Share on X">
        <i class="bi bi-twitter-x"></i>
    </a>
    <a href={shareLinks.linkedin} target="_blank" class="btn btn-outline-secondary me-2" aria-label="Share on LinkedIn">
        <i class="bi bi-linkedin"></i>
    </a>
    <a href={shareLinks.whatsapp} target="_blank" class="btn btn-outline-secondary me-2" aria-label="Share on WhatsApp">
        <i class="bi bi-whatsapp"></i>
    </a>
    <a href={shareLinks.telegram} target="_blank" class="btn btn-outline-secondary" aria-label="Share on Telegram">
        <i class="bi bi-telegram"></i>
    </a>
</div>